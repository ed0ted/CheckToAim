@model CheckToAim.Models.IndexViewModel
@using CheckToAim.Models
@using CheckToAim.Controllers
<div>
    @foreach (var item in Model.CheckLists)
    {

        <div class="checkdivwrap" style=" display: inline-block; min-width: 300px; width: 30%; padding: 20px; background-color: lightsteelblue; left: 3%; margin-left: 1%; margin-right: 1%; margin-top: 5%; border-radius: 5px;">
            <ul class="wrap" style="display: inline-block;">
                <li class="wrap"  style="display: inline-block;">

                    <h3 style=" text-align: center; font-size: 2.5vh;"><a href="@Url.Action("CheckList", "Home" , new {id=item.ID})">@item.Name</a></h3>                
                    <hr style=" height: 2px; background-color: lightslategrey; border-radius: 2px; border: none;" />
                    <ul class="aimslist" style=" background: -webkit-linear-gradient(top, transparent 50%, white 110%); white-space: nowrap; width: 100%; overflow: hidden; ">
                        <li style="width: 10px; padding-right: 110%; margin-left: -10%;">@item.Aims.Split((char)007)[0]</li>
                        <li style="width: 10px; padding-right: 110%; margin-left: -10%;">@item.Aims.Split((char)007)[1]</li>
                        <li style="width: 10px; padding-right: 110%; margin-left: -10%;">@item.Aims.Split((char)007)[2]</li>
                        <li style="width: 10px; padding-right: 110%; margin-left: -10%;color: #3c3c3c;" >@item.Aims.Split((char)007)[3]</li>
                        <li style="width: 10px; padding-right: 110%; margin-left: -10%;color: #aaa9aa;" >@item.Aims.Split((char)007)[4]</li>

                    </ul>
                    <hr style="margin-top: -0.5%; height: 2px; background-color: lightslategrey; border-radius: 2px; border: none;" />
                    <div class="buttonswrap" style="width: 100%; text-align: center;">                      
                        <img style=" width: 10%; margin-left: 5%; margin-right: 5%;" class="like-btn" src="~/Images/Like1.png" onclick="this.src='Images/Like.png'; @{((HomeController)this.ViewContext.Controller).LikeCheckList(item.ID, User.Identity.Name);}" />
                        <a style="text-align:center; position:absolute; margin-left:-2%;margin-top:1.5%;">@item.Likes</a>

                        <img style=" width: 10%; margin-left: 5%; margin-right: 5%;" src="~/Images/Save.png" />
                        <img style=" width: 10%; margin-left: 5%; margin-right: 5%;" src="~/Images/Add.png" onclick="@{((HomeController)this.ViewContext.Controller).AddToCompleteCheckList(item.ID);}"/>
                    </div>



                </li>
            </ul>
        </div>

    }
    <div class="btn-group" style="width: 100%; transform: translateX(40%); margin-top:20px;">
        @Html.PageLinks(Model.PageInfo, x => Url.Action("Home", new { page = x }))
    </div>

</div>
<script>
   
</script>

